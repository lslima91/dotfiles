bindsym XF86AudioPrev exec mpc previous

bindsym XF86MonBrightnessUp exec light -A 10 && notify-send -u low \"   $('light')% \"
bindsym XF86MonBrightnessDown exec light -U 10 && notify-send -u low \"   $('light')% \"

